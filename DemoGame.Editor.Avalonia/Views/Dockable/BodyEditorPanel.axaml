<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DemoGame.Editor.Avalonia.ViewModels.Dockable"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="DemoGame.Editor.Avalonia.Views.Dockable.BodyEditorPanel"
             x:DataType="vm:BodyEditorViewModel">
    
    <Design.DataContext>
        <vm:BodyEditorViewModel />
    </Design.DataContext>

    <!-- Main layout: Left (list + buttons), Right (properties) -->
    <Grid ColumnDefinitions="250,5,*">
        
        <!-- Left: Body list with buttons -->
        <Grid Grid.Column="0" RowDefinitions="Auto,*">
            
            <!-- Top: Buttons -->
            <Border Grid.Row="0" Background="#2D2D30" Padding="5" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Button Command="{Binding CreateNewBodyCommand}"
                            Content="âž• New"
                            Width="70"
                            Height="28"
                            ToolTip.Tip="Create new body" />
                    
                    <Button Command="{Binding DeleteBodyCommand}"
                            Content="ðŸ—‘ Delete"
                            Width="70"
                            Height="28"
                            ToolTip.Tip="Delete selected body" />
                </StackPanel>
            </Border>

            <!-- Bottom: Body List -->
            <Border Grid.Row="1" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                <ListBox ItemsSource="{Binding BodyItems}"
                         SelectedItem="{Binding SelectedBody}"
                         Background="#1E1E1E"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBlock Text="{Binding ID}" Foreground="#569CD6" />
                                <TextBlock Text="." Foreground="#569CD6" />
                                <TextBlock Text="{Binding Body}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      ResizeDirection="Columns"
                      Background="#3F3F46" />

        <!-- Right: Properties -->
        <Border Grid.Column="2" Background="#252526" Padding="10">
            <ScrollViewer>
                <StackPanel Spacing="10" IsVisible="{Binding SelectedBody, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <TextBlock Text="Body Properties" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="White" />
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="ID:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.ID}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Body:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Body}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Fall:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Fall}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Jump:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Jump}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Attack:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Attack}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Size:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Size}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Paperdoll:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Paperdoll}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Stand:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Stand}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Walk:" Foreground="#9CDCFE" FontSize="12" />
                        <TextBlock Text="{Binding SelectedBody.Walk}" 
                                   Foreground="White" 
                                   Margin="10,0,0,0" />
                    </StackPanel>

                    <TextBlock Text="ðŸ’¡ Properties shown are read-only. Full PropertyGrid coming soon!" 
                               Foreground="#808080" 
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

